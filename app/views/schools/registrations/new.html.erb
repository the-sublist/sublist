<div id="login" class="col-md-4 col-md-offset-4 well well-large ">
  <form class="new_school" id="new_school" action="/schools" accept-charset="UTF-8" method="post">
    <input name="utf8" type="hidden" value="âœ“">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      <input  id="school_email" autofocus="autofocus" type="email" class="form-control" name="school[email]" placeholder="Email">
    </div>

    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <input id="school_password" autocomplete="off" type="password" class="form-control" name="school[password]" placeholder="Password">
    </div>

    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <input id="school_password_confirmation" autocomplete="off" type="password" class="form-control" name="school[password_confirmation]" placeholder="Password Confirmation">
    </div>

    <div class="actions">
      <input type="submit" name="commit" value="Sign up" class="btn btn-success">
    </div>
  </form>
</div>

