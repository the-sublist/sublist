<div id="login" class="well well-large">
  <form class="new_teacher" id="new_teacher" action="/teachers" accept-charset="UTF-8" method="post">
    <input name="utf8" type="hidden" value="âœ“">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      <input  id="teacher_email" autofocus="autofocus" type="email" class="form-control" name="teacher[email]" placeholder="email">
    </div>

    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <input id="teacher_password" autocomplete="off" type="password" class="form-control" name="teacher[password]" placeholder="password">
    </div>

    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <input id="teacher_password_confirmation" autocomplete="off" type="password" class="form-control" name="teacher[password_confirmation]" placeholder="password confirmation">
    </div>

    <div class="actions">
      <input type="submit" name="commit" value="Sign up" class="btn btn-primary">
    </div>
  </form>
</div>

<div class="text-center">
  <br>
  <p>already have an account? <%= link_to "login here", new_teacher_session_path %></p>
</div>
